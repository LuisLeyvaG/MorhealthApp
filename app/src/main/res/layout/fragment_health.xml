<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragments.HealthFragment">

    <ScrollView
        android:id="@+id/scrollViewHealth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/grey"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_hexagon"
                    android:backgroundTint="@color/navy_blue">

                    <TextView
                        android:id="@+id/tvDayHealthScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="84"
                        android:textColor="@color/white0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje del día"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="febwhjbfhjweghfhjwegfhjgfwhjfgwhjfgjgfgjwgfwjgfwhjghwgfhjwgfjwegfwghjfwgfjwgfwjfgwj"
                        android:lineSpacingExtra="3dp"/>

                    <TextView
                        android:id="@+id/linkHealthScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leer más"
                        android:textColor="@color/aqua_blue"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyMetricsSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metrics"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/vertical_separator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_more"
                    android:textColor="@color/aqua_blue"
                    android:textSize="20sp"/>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:tag="heart_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="1"
                    android:orientation="vertical"
                    style="@style/HealthFragmentMetricCard"
                    android:onClick="goMetric">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_rate"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/heart_rate_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="86"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bpm"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última Actualización: "
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:tag="day_steps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/HealthFragmentMetricCard"
                    android:backgroundTint="@color/aqua_blue"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="1"
                    android:orientation="vertical"
                    android:onClick="goMetric">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day_steps"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/day_steps_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3650"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pasos"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última Actualización: "
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:tag="dream_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/HealthFragmentMetricCard"
                    android:backgroundTint="@color/blue"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="1"
                    android:orientation="vertical"
                    android:onClick="goMetric">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dream_time"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dream_time_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hrs"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última Actualización: "
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:tag="water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    style="@style/HealthFragmentMetricCard"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="1"
                    android:orientation="vertical"
                    android:onClick="goMetric">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/water"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/water_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lts"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última Actualización: "
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:tag="calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/navy_blue"
                    style="@style/HealthFragmentMetricCard"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="1"
                    android:orientation="vertical"
                    android:onClick="goMetric">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calories_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cal"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última Actualización: "
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="10dp"
                        />

                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:id="@+id/lyCalculatorSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/vertical_separator"/>

                <View
                    android:id="@+id/ivExpandMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_expand_more"/>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="20dp">



            </GridLayout>

        </LinearLayout>
        
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>