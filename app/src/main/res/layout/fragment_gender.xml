<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerfragments.GenderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_gender"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="160dp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:button="@null"
                android:background="@drawable/rb_gender_background"
                android:foreground="@mipmap/male_avatar"
                android:layout_marginHorizontal="10dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:button="@null"
                android:background="@drawable/rb_gender_background"
                android:foreground="@mipmap/female_avatar"
                android:layout_marginHorizontal="10dp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvMale"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvFemale"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femenino"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="14sp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foreground="@drawable/ic_chevron_right"
            android:foregroundTint="@color/white0"
            android:background="@drawable/ic_chevron_left_background"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginTop="115dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>