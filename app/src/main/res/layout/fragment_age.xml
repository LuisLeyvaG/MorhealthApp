<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerfragments.AgeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_age"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="160dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/npAge"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:theme="@style/NumberPickerTheme"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aÃ±os"
                android:textSize="40dp"
                android:layout_marginHorizontal="10dp"/>
            
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foreground="@drawable/ic_chevron_right"
            android:foregroundTint="@color/white0"
            android:background="@drawable/ic_chevron_left_background"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginTop="160dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>